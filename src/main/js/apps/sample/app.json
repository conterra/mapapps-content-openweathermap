{
  "properties": {
    "title": "OpenWeatherMap Content Bundle",
     "amdPackages": "apprt@^3.2.1"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system@^3.2.1",
      "splashscreen@^3.2.1",
      "map@^3.2.1",
      "themes@^3.2.1",
      "templates@^3.2.1",
      "templatelayout@^3.2.1",
      "windowmanager@^3.2.1",
      "toolrules@^3.2.1",
      "console@^3.2.1",
      "banner@^3.2.1",
      "content_openweathermap"
    ]
  },
  "bundles": {
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
        "imagePosition": "above",
        "link": "https://developernetwork.conterra.de"
      }
    },
    "map": {
      "MapState": {
        "initialExtent": {
          "xmin": -1100000,
          "ymin": 4000000,
          "xmax": 3500000,
          "ymax": 8800000,
          "spatialReference": {
            "wkid": 3857
          }
        }
      },
      "MapModelFactory": {
        "_configData": {
          "maps": [
            {
              "id": "default",
              "glass_pane": [],
              "operationalLayer": [],
              "baseLayer": [
                {
                  "service": "streets",
                  "enabled": true
                }
              ]
            }
          ]
        }
      },
      "MappingResourceRegistryFactory": {
        "_knownServices": {
          "services": [
            {
              "id": "streets",
              "url": "https://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer",
              "type": "AGS_TILED",
              "title": "${service.streets}"
            }
          ]
        }
      }
    }
  }
}