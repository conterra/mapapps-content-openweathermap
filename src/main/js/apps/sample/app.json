{
  "properties": {
    "title": "OpenWeatherMap Content Bundle",
    "amdPackages": "apprt@^3.2.1"
  },
  "load": {
    "bundleLocations": [
      "localbundles",
      "bundles"
    ],
    "allowedBundles": [
      "system@^3.2.1",
      "splashscreen@^3.2.1",
      "map@^3.2.1",
      "themes@^3.2.1",
      "templates@^3.2.1",
      "templatelayout@^3.2.1",
      "windowmanager@^3.2.1",
      "toolrules@^3.2.1",
      "console@^3.2.1",
      "banner@^3.2.1",
      "custominfo@^3.2.1",
      "content_openweathermap"
    ]
  },
  "bundles": {
    "custominfo": {
      "CustomInfoToggleTool": [
        {
          "id": "customInfoTool",
          "activateOnStartup": true,
          "title": "Information",
          "tooltip": "Information",
          "iconClass": "icon-custom-info-info",
          "toolClass": "ctInfo",
          "togglable": true,
          "widgetSettings": {
            "title": "Information",
            "content": "This example configuration of a content bundle adds the openweathermap datastore to the app and presents the weather data in the map. When clicking on the symbols the weather at that moment and a weather forecast is displayed",
            "window": {
              "marginBox": {
                "w": 300,
                "h": 120,
                "l": 25,
                "b": 70
              },
              "draggable": true,
              "closable": true,
              "modal": false,
              "maximizable": false,
              "resizable": false
            }
          }
        }
      ]
    },
    "banner": {
      "BannerWidget": {
        "label": "Developer Network",
        "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
        "imagePosition": "above",
        "link": "https://developernetwork.conterra.de"
      }
    },
    "map": {
      "MapState": {
        "initialExtent": {
          "xmin": -1100000,
          "ymin": 4000000,
          "xmax": 3500000,
          "ymax": 8800000,
          "spatialReference": {
            "wkid": 3857
          }
        }
      },
      "MapModelFactory": {
        "_configData": {
          "maps": [
            {
              "id": "default",
              "glass_pane": [],
              "operationalLayer": [],
              "baseLayer": [
                {
                  "service": "streets",
                  "enabled": true
                }
              ]
            }
          ]
        }
      },
      "MappingResourceRegistryFactory": {
        "_knownServices": {
          "services": [
            {
              "id": "streets",
              "url": "https://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer",
              "type": "AGS_TILED",
              "title": "${service.streets}"
            }
          ]
        }
      }
    }
  }
}